{
  "name": "personnes-morales",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=16.4"
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "build:front-js": "esbuild public/resources/js/index.js --bundle --minify --outfile=public/resources/js/bundle.js --target=chrome58,firefox57",
    "build:css": "purgecss --config ./purgecss.config.js --output public/resources/css/bundle.css",
    "build:sitemap": "node ./node-scripts/generate.js",
    "build:back": "NODE_ENV=production next build",
    "build:site": "npm run build:front-js && npm run build:css && npm run build:back",
    "build": "npm run build:sitemap && npm run build:site",
    "start": "NODE_ENV=production && next start",
    "test:end2end": "cypress open",
    "test:unit": "jest",
    "test:a11y": "node ./node-scripts/a11y.js",
    "test:inpi-pdf-proxy": "node ./node-scripts/inpi-pdf-proxy-test.js",
    "lint": "next lint"
  },
  "dependencies": {
    "@sentry/node": "^6.6.0",
    "@types/axios-token-interceptor": "^0.2.1",
    "@types/cookies": "^0.7.7",
    "@types/crypto-js": "^4.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.4.13",
    "@types/qrcode": "^1.4.0",
    "@types/raven": "^2.5.3",
    "@types/react": "^17.0.11",
    "@types/yauzl": "^2.9.1",
    "abort-controller": "^3.0.0",
    "axios": "^0.21.1",
    "axios-oauth-client": "^1.4.2",
    "axios-token-interceptor": "^0.2.0",
    "cookies": "^0.8.0",
    "crypto-js": "^4.1.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "fast-xml-parser": "^3.19.0",
    "form-data": "^4.0.0",
    "next": "^11.0.1",
    "next-seo": "^4.24.0",
    "qrcode": "^1.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^6.0.2",
    "typescript": "^4.3.4",
    "purgecss": "^4.0.3",
    "esbuild": "^0.13.7",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.3.1",
    "cypress": "^8.2.0",
    "jest": "^27.0.6",
    "sass": "^1.34.1",
    "simple-git-hooks": "^2.6.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx simple-git-hooks && npm run lint && npm run test:unit"
  }
}
